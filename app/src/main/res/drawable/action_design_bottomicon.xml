<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected State -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#33FFFFFF"/> <!-- Light Transparent White -->
            <size android:width="30dp" android:height="15dp"/> <!-- Reduced Size -->
            <corners android:radius="20dp"/> <!-- Smaller Rounded Effect -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- No color when unselected -->
        </shape>
    </item>

</selector>
