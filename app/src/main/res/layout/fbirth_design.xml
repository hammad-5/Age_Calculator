<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/background_main"
    android:orientation="vertical"
    android:forceDarkAllowed="false">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/birth_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="16dp"
        android:background="@color/card_background"
        app:cardElevation="4dp"
        android:forceDarkAllowed="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background"
            android:forceDarkAllowed="false">

            <!-- Main Content Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/card_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:forceDarkAllowed="false">

                <!-- Oval Shape Profile Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/shahrukh"
                    app:shapeAppearanceOverlay="@style/OvalImageStyle"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Text Layout -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/age_text_static"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Age_about"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/age_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/years_old_about"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Shah_Rukh_about"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2B4B65"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Birthday_about"
                        android:textSize="14sp"
                        android:textColor="#2B4B65" />

                    <TextView
                        android:id="@+id/user_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_about"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/next_birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Next_Birthday_about"
                        android:textSize="14sp"
                        android:textColor="#2B4B65"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/user_next_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/next_birthday_date_about"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Next Icon fixed at bottom-right -->
            <ImageView
                android:id="@+id/next_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_design"
                android:src="@drawable/next"
                android:contentDescription="Next"
                android:padding="8dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

