<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDF7F6"
    tools:context=".Age_Calculator_SoftSow.privacy_policy">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#AD9980"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_back"
            android:id="@+id/arrow_back"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Privacy Policy Section -->
            <TextView
                android:id="@+id/privacyPolicyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At [Age Calculate], we value your privacy. This app does not collect, store, or share any personal information. All calculations are performed locally on your device."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Data Security -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Security:"
                android:textSize="18sp"
                android:textColor="#2B4B65"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your data never leaves your device. We don't require internet permissions and there are no hidden data collection processes. All date information you input is immediately discarded after calculations."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- App Functionality -->
            <TextView
                android:id="@+id/functionalityHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Functionality:"
                android:textSize="18sp"
                android:textColor="#2B4B65"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/functionalityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate your age in years, months, weeks, days, hours, minutes, and seconds from your birth date to the current date. Determine your zodiac sign based on your birth date using standard astrological calculations. All results are generated in real-time and never stored."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Zodiac Sign Details -->
            <TextView
                android:id="@+id/zodiacHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zodiac Calculation:"
                android:textSize="18sp"
                android:textColor="#2B4B65"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/zodiacText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zodiac signs are determined using tropical astrology dates:\n\n• Aries: March 21 - April 19\n• Taurus: April 20 - May 20\n• Gemini: May 21 - June 20\n• Cancer: June 21 - July 22\n• Leo: July 23 - August 22\n• Virgo: August 23 - September 22\n• Libra: September 23 - October 22\n• Scorpio: October 23 - November 21\n• Sagittarius: November 22 - December 21\n• Capricorn: December 22 - January 19\n• Aquarius: January 20 - February 18\n• Pisces: February 19 - March 20"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Age Calculation Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculation Method:"
                android:textSize="18sp"
                android:textColor="#2B4B65"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age calculations consider:\n• Gregorian calendar dates\n• Leap years\n• Month length variations\n• Time zones based on device settings\n• Daylight saving time adjustments\nAll results are approximate and based on 24-hour days."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Limitations -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Important Notes:"
                android:textSize="18sp"
                android:textColor="#2B4B65"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• For entertainment purposes only\n• Not medical/legal advice\n• Zodiac interpretations may vary\n• Calendar conversions may have historical inaccuracies\n• Does not account for relativistic effects"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/bottom_nav"
        app:menu="@menu/bottom_nav"
        android:paddingTop="17dp"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        />

</LinearLayout>
