<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDF7F6"
    tools:context=".privacy_policy">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#AD9980"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_back"
            android:id="@+id/arrow_back"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>


    <!-- ScrollView for Privacy Policy Text -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Merged Privacy Policy Text -->
            <TextView
                android:id="@+id/privacyPolicyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At [Age Calculate], we value your privacy. This app does not collect, store, or share any personal information. All calculations are performed locally on your device."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- App Functionality Description -->
            <TextView
                android:id="@+id/functionalityHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Functionality:"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/functionalityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate your age in years, months, weeks, days, hours, minutes, and seconds from your birth date to the current date. Determine your zodiac sign based on your birth date. This app provides accurate and instant results for all your age-related queries."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Zodiac Sign Section -->
            <TextView
                android:id="@+id/zodiacHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zodiac Sign:"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/zodiacText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your zodiac sign is determined based on your birth date. For example, if your birth date is December 30, your zodiac sign is Capricorn. The app uses astrological calculations to provide accurate zodiac signs for all users."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Radio Buttons for Acknowledgment -->
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <RadioButton
                    android:id="@+id/radioAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree to the Privacy Policy"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:buttonTint="@color/black" /> <!-- Change radio button color to black -->

                <RadioButton
                    android:id="@+id/radioDisagree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I do not agree to the Privacy Policy"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:buttonTint="@color/black" /> <!-- Change radio button color to black -->

                <RadioButton
                    android:id="@+id/radioUnderstandFunctionality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I understand the app's functionality"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:buttonTint="@color/black" /> <!-- Change radio button color to black -->

                <RadioButton
                    android:id="@+id/radioUnderstandZodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I understand how my zodiac sign is determined"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:buttonTint="@color/black" /> <!-- Change radio button color to black -->
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/bottom_nav"
        app:menu="@menu/bottom_nav"
        android:paddingTop="17dp"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        />

</LinearLayout>