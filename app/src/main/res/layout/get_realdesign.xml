<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/get_realCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDF7F6"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/design"
               android:backgroundTint="#fff"

               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginBottom="10dp"
               android:layout_marginTop="20dp"
               >

               <!-- Basic Info Section -->
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Basic Information"
                   android:textSize="25dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="10dp"
                   android:textColor="#2B4B65"
                   android:textStyle="bold"
                   android:fontFamily="@font/robotovariable"
                   android:paddingBottom="8dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="20dp"
                   android:paddingBottom="16dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Name: "
                       android:textSize="18dp"
                       android:textStyle="bold"
                       android:textColor="#2B4B65"/>

                   <TextView
                       android:id="@+id/name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18dp"
                       android:textColor="#000000"/>
               </LinearLayout>

               <!-- Age and Birthday Section -->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="20dp"
                   android:paddingBottom="16dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age: "
                       android:textSize="18dp"
                       android:textStyle="bold"
                       android:textColor="#2B4B65"/>

                   <TextView
                       android:id="@+id/age"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18dp"
                       android:textColor="#000000"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="20dp"
                   android:paddingBottom="16dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Birthday: "
                       android:textSize="18dp"
                       android:textStyle="bold"
                       android:textColor="#2B4B65"/>

                   <TextView
                       android:id="@+id/birthday"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18dp"
                       android:textColor="#000000"/>
               </LinearLayout>

           </LinearLayout>
            <!-- Western Zodiac Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/design"
                android:backgroundTint="#fff"
                android:padding="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Western Zodiac"
                    android:textSize="25sp"
                    android:textColor="#2B4B65"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <ImageView
                        android:id="@+id/zodiac_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Zodiac sign icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/Wzodiac_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capricorn"
                            android:textSize="20sp"
                            android:textColor="#2B4B65"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/zodiac_traits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Traits: Responsible, disciplined, self-controlled"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Chinese Zodiac Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/design"
                android:padding="16dp"
                android:backgroundTint="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chinese Zodiac"
                    android:textSize="25sp"
                    android:textColor="#2B4B65"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <ImageView
                        android:id="@+id/chinese_zodiac_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Chinese zodiac icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        >

                        <TextView
                            android:id="@+id/Czodiac_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rat"
                            android:textSize="20sp"
                            android:textColor="#2B4B65"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/chinese_traits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Traits: Quick-witted, resourceful, versatile"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/design"
                android:backgroundTint="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <!-- Next Birthday Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next Birthday"
                    android:textSize="25dp"
                    android:textColor="#2B4B65"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/robotovariable"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/next_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
